{
  "name": "ad-aures/podcast-txt",
  "version": "0.1.0",
  "minCastopodVersion": "2.0.0-next.3",
  "description": "Add freeform text, like a DNS TXT record.",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "url": "https://github.com/ad-aures/castopod-plugins",
    "directory": "podcast-txt"
  },
  "authors": [
    {
      "name": "Yassine Doghri",
      "url": "https://yassinedoghri.com/"
    }
  ],
  "keywords": ["podcasting2"],
  "hooks": ["rssAfterChannel", "rssAfterItem"],
  "settings": {
    "podcast": {
      "txt": {
        "label": "TXT",
        "type": "group",
        "multiple": true,
        "fields": {
          "purpose": {
            "label": "Purpose",
            "optional": true
          },
          "value": {
            "label": "Value",
            "type": "textarea"
          }
        }
      }
    },
    "episode": {
      "txt": {
        "label": "TXT",
        "type": "group",
        "multiple": true,
        "fields": {
          "purpose": {
            "label": "Purpose",
            "optional": true
          },
          "value": {
            "label": "Value",
            "type": "textarea"
          }
        }
      }
    }
  }
}
