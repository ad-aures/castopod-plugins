{
  "name": "ad-aures/podcast-podroll",
  "version": "0.1.0",
  "minCastopodVersion": "2.0.0-next.3",
  "description": "Recommend other podcasts.",
  "license": "AGPL-3.0-or-later",
  "submodule": true,
  "repository": {
    "url": "https://github.com/ad-aures/castopod-plugins",
    "directory": "podcast-podroll"
  },
  "authors": [
    {
      "name": "Yassine Doghri",
      "url": "https://yassinedoghri.com/"
    }
  ],
  "keywords": ["podcasting2"],
  "hooks": ["rssAfterChannel"],
  "settings": {
    "podcast": {
      "feed-guids": {
        "label": "Feed GUID",
        "type": "text",
        "multiple": true,
        "validationRules": "regex_match[/[0-9a-fA-F]{8}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{12}/]"
      }
    }
  }
}
